<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login_regsiter_activity.MainActivity"
    android:orientation="vertical"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:background="@drawable/login_back">

    <LinearLayout
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_name"
                android:hint="手机号"
                android:textColorHint="#ffffff"
                android:textSize="18sp"
                android:drawableLeft="@drawable/login_icon_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawablePadding="20dp"
                android:background="@android:color/transparent"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffffff"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edit_pass"
                    android:hint="登录密码"
                    android:textColorHint="#ffff"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/login_icon_lock"
                    android:layout_width="wrap_content"
                    android:drawablePadding="20dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:password="true"/>

                <ImageView
                    android:id="@+id/eye_login"
                    android:src="@drawable/login_icon_eye"
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_weight="1"
                android:text="记住密码"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/zhu_ce"
                android:text="快速注册"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/deng_text"
        android:text="登录"
        android:textColor="#ff5f71"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="36dp"
        android:layout_gravity="center"
        android:background="@drawable/login_button_deng_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/qqdenglu"/>

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/weixindenglu"/>
    </LinearLayout>

</LinearLayout>