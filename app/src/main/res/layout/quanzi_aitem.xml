<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp"
    app:cardElevation="2dp"
    android:layout_marginRight="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="44dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/touxiang_q"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:actualImageScaleType="centerInside"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#000"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/name_q"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="@string/占位"
                android:textColor="#cccccc"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/shijian_q"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="adfdgga"
                android:textColor="#cccccc"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_q"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="adfdgga"
                android:textColor="#cccccc"
                android:textSize="12sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/tupian_q"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10sp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/dianzan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="135dp"
                android:layout_marginRight="135dp"
                android:gravity="center"
                android:src="@drawable/dianzan" />

            <TextView
                android:id="@+id/dianzanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:text="24dp"
                android:textSize="24sp" />
        </RelativeLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>