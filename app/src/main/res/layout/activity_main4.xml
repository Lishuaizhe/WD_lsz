<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.xiangqingye.Main4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/x_fan"
            android:layout_width="wrap_content"
            android:text="返回"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/banner_x"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/pirce_x"
                    android:textColor="#f00"
                    android:textSize="30dp"
                    android:text="adsf"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/yishou_x"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_x"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/zhong_x"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>

            <WebView
                android:id="@+id/x_webview"
                android:layout_below="@+id/detail_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/jiarugou"
                android:text="加入购物车"
                android:layout_width="match_parent"
                android:background="#f00"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>